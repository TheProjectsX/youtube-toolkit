{
    "manifest_version": 3,
    "name": "YouTube Toolkit",
    "description": "N/A",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["storage", "tabs", "scripting", "webNavigation"],
    "icons": {
        "16": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    },
    "host_permissions": ["http://*/*", "https://*/*"],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": [
                "scripts/utils.js",
                "scripts/observer.js",
                "scripts/controllers.js",
                "scripts/content.js"
            ],
            "type": "module"
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    }
}
